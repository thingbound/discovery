{
	"compilerOptions": {
		"moduleResolution": "Node",
		"target": "ES2020",
		"module": "ES2020",

		"lib": [ "ES2020" ],

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"strict": true,
		"esModuleInterop": true,

		"declarationDir": "dist/types",
		"outDir": "dist/esm",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src"
	],
	"typedocOptions": {
		"entryPoints": [ "src/index.ts" ],
		"out": "apidocs",
		"excludePrivate": true
	}
}
